<div id="pageTitle">
    <h1>New Category</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @category.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Title: </td>
    			  <td class="itemValue"><input type="text" name="category[title]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Price: </td>
    			  <td class="itemValue"><input type="text" name="category[price]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Created at: </td>
    			  <td class="itemValue"><input type="text" name="category[created_at]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Updated at: </td>
    			  <td class="itemValue"><input type="text" name="category[updated_at]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>